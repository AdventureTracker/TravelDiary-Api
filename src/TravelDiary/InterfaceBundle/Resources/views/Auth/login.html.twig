{% extends '@TravelDiaryInterface/_layout/login.html.twig' %}

{% block title %}Login{% endblock %}

{% block content %}

	<div class="row">

		<div class="panel col-md-4 col-md-offset-4" style="margin-top: 100px;">

			{% if error %}
				<div class="row">
					<div class="col-lg-12">
						<div class="card-panel red">
							<span class="white-text">{{ error.messageKey|trans(error.messageData, 'security') }}</span>
						</div>
					</div>
				</div>
			{% endif %}

			<div class="row">
				<div class="col-lg-12">
					<form action="{{ path('check') }}" method="post">

						{#Logo#}
						<div class="form-group text-center">
							<img src="{{ asset('bundles/traveldiaryinterface/img/logo.png') }}" class="responsive-img" style="max-height: 150px;">
							<p>TravelDiary</p>
						</div>

						<div class="form-group">
							<label for="email">Email</label>
							<input id="email" type="email" class="form-control" name="_username">
						</div>

						<div class="form-group">
							<label for="password">Password</label>
							<input id="password" type="password" class="form-control" name="_password">
						</div>

						<div class="form-group text-center">
							<button class="btn btn-raised btn-primary" type="submit">Login</button>
						</div>
					</form>
				</div>
			</div>

		</div>

	</div>

{% endblock %}

