<thead>
<tr>
	<th>Traveler</th>
	<th>Date</th>
	<th>Type</th>
	<th>Location</th>
	<th>Description</th>
	<th>Actions</th>
</tr>
</thead>

<tbody>
{% for record in records.items %}
	<tr>
		<td><img src="{{ record.idUser.usrEmail|gravatar(50) }}" class="img-circle"></td>
		<td>{{ record.recDay|date("d.m.y H:i") }}</td>
		<td>{{ record.idRecordType.retDescription }}</td>
		<td>{{ pointToAddress(record.recLocation) }}</td>
		<td>{{ record.recDescription }}</td>
		<td class="btn-group-sm">
			<a class="btn btn-danger btn-fab" data-action href="{{ path('removeTripRecord', {'idTrip': trip.idTrip, 'idRecord': record.idRecord}) }}"><i class="material-icons tiny">delete</i></a>
			<a class="btn btn-default btn-fab" data-action href="#"><i class="material-icons tiny">share</i></a>
		</td>
	</tr>
{% else %}
	<tr>
		<td colspan="6" class="center">
			No records found!
		</td>
	</tr>
{% endfor %}
</tbody>

<tfoot>
<tr>
	<td colspan="6" class="text-center">
		<ul class="pagination">
			<li class="{{ (records.page == 1) ? 'disabled' : 'waves-effect' }}"><a href="{{ (records.page != 1) ? path('listTripRecords', {'page': records.page - 1, 'idTrip': trip.idTrip}) : '#' }}">&laquo;</a></li>
			{% for i in 1..records.pages %}
				<li class="{{ (records.page == i) ? 'active' : 'waves-effect' }}"><a href="{{ path('listTripRecords', {'page': i, 'idTrip': trip.idTrip}) }}"> {{ i }} </a> </li>
			{% endfor %}
			<li class="{{ (records.page == records.pages) ? 'disabled' : 'waves-effect' }}"><a href="{{ (records.page != records.pages) ? path('listTripRecords', {'page': records.page + 1, 'idTrip': trip.idTrip}) : '#' }}">&raquo;</a></li>

		</ul>
	</td>
</tr>
</tfoot>